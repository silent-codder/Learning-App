<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".Fruit">

  <TextView
      android:id="@id/title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="फळे"
      android:textSize="35dp"
      android:textStyle="bold"
      android:textColor="@color/darkGreen"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="10dp"/>

  <ScrollView
      android:layout_below="@id/title"
      android:layout_width="match_parent"
      android:layout_height="match_parent">
    <RelativeLayout
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

      <ImageView
          android:id="@+id/apple"
          android:layout_width="250dp"
          android:layout_height="180dp"
          android:src="@drawable/apple"
          android:layout_centerHorizontal="true"/>
      <LinearLayout
          android:id="@+id/animal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="7dp"
          android:orientation="vertical"
          android:background="@drawable/red_bg"
          android:layout_marginTop="179dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="सफरचंद"
            android:layout_gravity="center"
            android:textSize="35sp"
            android:textStyle="bold"
            android:textColor="#ffffff"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:text="आज आपण भारताचा राष्ट्रीय प्राणी वाघाबद्दल जाणून घेऊया.  २९ जुलै हा जागतिक वाघ दिवस म्हणून साजरा केला जातो."
            android:gravity="center"
            android:textSize="17sp"/>

        <LinearLayout
            android:id="@+id/btn_readMore_apple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal">
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Read more"
              android:textColor="#ffffff"
              android:textStyle="bold"/>

          <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@drawable/ic_next"
              android:layout_marginRight="30dp"/>


        </LinearLayout>
      </LinearLayout>

      <ImageView
          android:id="@+id/banana"
          android:layout_below="@id/animal"
          android:layout_width="250dp"
          android:layout_height="150dp"
          android:layout_marginTop="15dp"
          android:src="@drawable/banana"
          android:layout_centerHorizontal="true"/>
      <LinearLayout
          android:layout_below="@id/banana"
          android:id="@+id/animal_1"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="7dp"
          android:orientation="vertical"
          android:background="@drawable/yellow_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="केळी"
            android:layout_gravity="center"
            android:textSize="35sp"
            android:textStyle="bold"
            android:textColor="#ffffff"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:text="प्राण्यांचा राजा सिंह आहे. अतिशय शूर, देखना, रुबाबदार असा हा प्राणी जंगलाचा राजा म्हणून शोभून दिसतो. "
            android:gravity="center"
            android:textSize="17sp"/>

        <LinearLayout
            android:id="@+id/btn_readMore_banana"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal">
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Read more"
              android:textColor="#ffffff"
              android:textStyle="bold"/>

          <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@drawable/ic_next"
              android:layout_marginRight="30dp"/>


        </LinearLayout>
      </LinearLayout>

      <ImageView
          android:id="@+id/grapes"
          android:layout_below="@id/animal_1"
          android:layout_width="250dp"
          android:layout_height="150dp"
          android:layout_marginTop="15dp"
          android:src="@drawable/grapes"
          android:layout_centerHorizontal="true"/>
      <LinearLayout
          android:layout_below="@id/grapes"
          android:id="@+id/animal_2"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="7dp"
          android:orientation="vertical"
          android:background="@drawable/darkgreen_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="द्राक्षे"
            android:layout_gravity="center"
            android:textSize="35sp"
            android:textStyle="bold"
            android:textColor="#ffffff"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:text="अस्वले आपल्या हातांच्या विळख्यात प्राण्याला घट्ट पकडून गुदगुल्या करून ठार मारते अशी समजूत आहे. पण ती समजूत खरी नाही."
            android:gravity="center"
            android:textSize="17sp"/>

        <LinearLayout
            android:id="@+id/btn_readMore_grapes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal">
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Read more"
              android:textColor="#ffffff"
              android:textStyle="bold"/>

          <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@drawable/ic_next"
              android:layout_marginRight="30dp"/>


        </LinearLayout>
      </LinearLayout>

      <ImageView
          android:id="@+id/jackFruits"
          android:layout_below="@id/animal_2"
          android:layout_width="250dp"
          android:layout_height="150dp"
          android:layout_marginTop="15dp"
          android:src="@drawable/jackfruit"
          android:layout_centerHorizontal="true"/>
      <LinearLayout
          android:layout_below="@id/jackFruits"
          android:id="@+id/animal_3"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="7dp"
          android:orientation="vertical"
          android:background="@drawable/yellow_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="फणस"
            android:layout_gravity="center"
            android:textSize="35sp"
            android:textStyle="bold"
            android:textColor="#ffffff"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:text="उंट हा एक वाळवंटी प्रदेशात राहणारा प्राणी आहे. वाळवंटातील वास्तव्यासाठी त्याची नैसर्गिक जडणघडण झाली आहे."

            android:gravity="center"
            android:textSize="17sp"/>

        <LinearLayout
            android:id="@+id/btn_readMore_jackFruit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal">
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Read more"
              android:textColor="#ffffff"
              android:textStyle="bold"/>

          <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@drawable/ic_next"
              android:layout_marginRight="30dp"/>


        </LinearLayout>
      </LinearLayout>

      <ImageView
          android:id="@+id/mango"
          android:layout_below="@id/animal_3"
          android:layout_width="250dp"
          android:layout_height="150dp"
          android:layout_marginTop="15dp"
          android:src="@drawable/mango"
          android:layout_centerHorizontal="true"/>
      <LinearLayout
          android:layout_below="@id/mango"
          android:id="@+id/animal_4"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="7dp"
          android:orientation="vertical"
          android:background="@drawable/darkgreen_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="आंबा"
            android:layout_gravity="center"
            android:textSize="35sp"
            android:textStyle="bold"
            android:textColor="#ffffff"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:text="भारत कृषी देश असल्यामुळे येथे गायीचं फार महत्त्व आहे. हिंदू धर्मात गायीचं महत्त्व असल्याचे काही आध्यात्मिक, धार्मिक आणि चिकित्सीय कारणंही आहेत."
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textSize="17sp"/>

        <LinearLayout
            android:id="@+id/btn_readMore_mango"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal">
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Read more"
              android:textColor="#ffffff"
              android:textStyle="bold"/>

          <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@drawable/ic_next"
              android:layout_marginRight="30dp"/>


        </LinearLayout>
      </LinearLayout>

      <ImageView
          android:id="@+id/orange"
          android:layout_below="@id/animal_4"
          android:layout_width="250dp"
          android:layout_height="150dp"
          android:layout_marginTop="15dp"
          android:src="@drawable/orange"
          android:layout_centerHorizontal="true"/>
      <LinearLayout
          android:layout_below="@id/orange"
          android:id="@+id/animal_5"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="7dp"
          android:orientation="vertical"
          android:background="@drawable/orange_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="संत्री"
            android:layout_gravity="center"
            android:textSize="35sp"
            android:textStyle="bold"
            android:textColor="#ffffff"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:text="हरीण भारतात आढळणारी हरीणाची मुख्य जात आहे. याचे शास्त्रीय नाव Cervix unicolour असे आहे. "
            android:gravity="center"
            android:textSize="17sp"/>

        <LinearLayout
            android:id="@+id/btn_readMore_orange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal">
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Read more"
              android:textColor="#ffffff"
              android:textStyle="bold"/>

          <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@drawable/ic_next"
              android:layout_marginRight="30dp"/>


        </LinearLayout>
      </LinearLayout>

      <ImageView
          android:id="@+id/pinaple"
          android:layout_below="@id/animal_5"
          android:layout_width="250dp"
          android:layout_height="150dp"
          android:layout_marginTop="15dp"
          android:src="@drawable/pinaple"
          android:layout_centerHorizontal="true"/>
      <LinearLayout
          android:layout_below="@id/pinaple"
          android:id="@+id/animal_6"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="7dp"
          android:orientation="vertical"
          android:background="@drawable/white_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="अननस"
            android:layout_gravity="center"
            android:textSize="35sp"
            android:textStyle="bold"
            android:textColor="#ffffff"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:text="भारतीय संस्कृतीत हत्ती हे समृद्धी, सृजनशीलता, बुद्धी, औदार्य, शौर्य, मांगल्य व राजयोगाचे प्रतीक मानले गेले आहे."
            android:gravity="center"
            android:textSize="17sp"/>

        <LinearLayout
            android:id="@+id/btn_readMore_pinaple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal">
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Read more"
              android:textColor="#ffffff"
              android:textStyle="bold"/>

          <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@drawable/ic_next"
              android:layout_marginRight="30dp"/>


        </LinearLayout>
      </LinearLayout>

      <ImageView
          android:id="@+id/strawberry"
          android:layout_below="@id/animal_6"
          android:layout_width="250dp"
          android:layout_height="150dp"
          android:layout_marginTop="15dp"
          android:src="@drawable/strawberry"
          android:layout_centerHorizontal="true"/>
      <LinearLayout
          android:layout_below="@id/strawberry"
          android:id="@+id/animal_7"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="7dp"
          android:orientation="vertical"
          android:background="@drawable/darkgreen_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="स्ट्रॉबेरी"
            android:layout_gravity="center"
            android:textSize="35sp"
            android:textStyle="bold"
            android:textColor="#ffffff"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:text="घोडा हा एक खूप चपळ पण प्रामाणिक प्राणी आहे. त्याचे वैज्ञानिक नाव 'Equus ferus caballus' असे आहे."
            android:gravity="center"
            android:textSize="17sp"/>

        <LinearLayout
            android:id="@+id/btn_readMore_strawberry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal">
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Read more"
              android:textColor="#ffffff"
              android:textStyle="bold"/>

          <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@drawable/ic_next"
              android:layout_marginRight="30dp"/>


        </LinearLayout>
      </LinearLayout>


      <TextView
          android:id="@+id/po"
          android:layout_marginTop="10dp"
          android:layout_below="@id/animal_7"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerHorizontal="true"
          android:text="Powered by"/>
      <ImageView
          android:layout_below="@id/po"
          android:layout_width="200dp"
          android:layout_height="100dp"
          android:layout_centerHorizontal="true"
          android:src="@drawable/vclassroom"/>

    </RelativeLayout>
  </ScrollView>

  </RelativeLayout>