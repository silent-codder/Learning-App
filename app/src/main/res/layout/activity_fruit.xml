<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".Fruit">

  <TextView
      android:id="@id/title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="फळे"
      android:textSize="35dp"
      android:textStyle="bold"
      android:textColor="@color/darkGreen"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="10dp"/>

  <ScrollView
      android:layout_below="@id/title"
      android:layout_width="match_parent"
      android:layout_height="match_parent">
    <RelativeLayout
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

      <ImageView
          android:id="@+id/apple"
          android:layout_width="250dp"
          android:layout_height="180dp"
          android:src="@drawable/apple"
          android:layout_centerHorizontal="true"/>
      <LinearLayout
          android:id="@+id/animal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="7dp"
          android:orientation="vertical"
          android:background="@drawable/red_bg"
          android:layout_marginTop="179dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="सफरचंद"
            android:layout_gravity="center"
            android:textSize="35sp"
            android:textStyle="bold"
            android:textColor="#ffffff"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:text="आरोग्याच्या दृष्टीने सर्व फळांमध्ये अतिउत्तम म्हणून सफरचंद हे फळ मानले जाते.  मधुर, आंबट चवीचे सफरचंद हे बऱ्याच अंशी पूर्ण असल्याने आरोग्यसंरक्षक फळ मानले गेले आहे."
            android:gravity="center"
            android:textSize="17sp"/>

        <LinearLayout
            android:id="@+id/btn_readMore_apple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal">
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Read more"
              android:textColor="#ffffff"
              android:textStyle="bold"/>

          <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@drawable/ic_next"
              android:layout_marginRight="30dp"/>


        </LinearLayout>
      </LinearLayout>

      <ImageView
          android:id="@+id/banana"
          android:layout_below="@id/animal"
          android:layout_width="250dp"
          android:layout_height="150dp"
          android:layout_marginTop="15dp"
          android:src="@drawable/banana"
          android:layout_centerHorizontal="true"/>
      <LinearLayout
          android:layout_below="@id/banana"
          android:id="@+id/animal_1"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="7dp"
          android:orientation="vertical"
          android:background="@drawable/yellow_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="केळी"
            android:layout_gravity="center"
            android:textSize="35sp"
            android:textStyle="bold"
            android:textColor="#ffffff"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:text="केळी खाण्यासाठी सर्वात लाभदायक असतात. यांपासून अनेक आरोग्यदायक फायदे आहेत. हे एक बहुगुणी फळ आहे ज्यामध्ये अनेक पोषके आणि जीवनसत्वे आहेत."
            android:gravity="center"
            android:textSize="17sp"/>

        <LinearLayout
            android:id="@+id/btn_readMore_banana"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal">
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Read more"
              android:textColor="#ffffff"
              android:textStyle="bold"/>

          <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@drawable/ic_next"
              android:layout_marginRight="30dp"/>


        </LinearLayout>
      </LinearLayout>

      <ImageView
          android:id="@+id/grapes"
          android:layout_below="@id/animal_1"
          android:layout_width="250dp"
          android:layout_height="150dp"
          android:layout_marginTop="15dp"
          android:src="@drawable/grapes"
          android:layout_centerHorizontal="true"/>
      <LinearLayout
          android:layout_below="@id/grapes"
          android:id="@+id/animal_2"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="7dp"
          android:orientation="vertical"
          android:background="@drawable/darkgreen_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="द्राक्षे"
            android:layout_gravity="center"
            android:textSize="35sp"
            android:textStyle="bold"
            android:textColor="#ffffff"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:text="द्राक्ष ही एक वेलवर्गातील वनस्पती आहे. याच्या दोन जाती आहेत: पिवळी द्राक्षे व काळी द्राक्षे. ही फळे उन्हाळ्यात मिळतात."
            android:gravity="center"
            android:textSize="17sp"/>

        <LinearLayout
            android:id="@+id/btn_readMore_grapes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal">
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Read more"
              android:textColor="#ffffff"
              android:textStyle="bold"/>

          <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@drawable/ic_next"
              android:layout_marginRight="30dp"/>


        </LinearLayout>
      </LinearLayout>

      <ImageView
          android:id="@+id/jackFruits"
          android:layout_below="@id/animal_2"
          android:layout_width="250dp"
          android:layout_height="150dp"
          android:layout_marginTop="15dp"
          android:src="@drawable/jackfruit"
          android:layout_centerHorizontal="true"/>
      <LinearLayout
          android:layout_below="@id/jackFruits"
          android:id="@+id/animal_3"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="7dp"
          android:orientation="vertical"
          android:background="@drawable/yellow_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="फणस"
            android:layout_gravity="center"
            android:textSize="35sp"
            android:textStyle="bold"
            android:textColor="#ffffff"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:text="फणस हे फळ आकाराने फार मोठे असते. फणसाच्या आवरणाला चारखंड असे म्हणतात. चारखंडाला काट्यांसारखी अनेक टोके असतात."
            android:gravity="center"
            android:textSize="17sp"/>

        <LinearLayout
            android:id="@+id/btn_readMore_jackFruit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal">
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Read more"
              android:textColor="#ffffff"
              android:textStyle="bold"/>

          <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@drawable/ic_next"
              android:layout_marginRight="30dp"/>


        </LinearLayout>
      </LinearLayout>

      <ImageView
          android:id="@+id/mango"
          android:layout_below="@id/animal_3"
          android:layout_width="250dp"
          android:layout_height="150dp"
          android:layout_marginTop="15dp"
          android:src="@drawable/mango"
          android:layout_centerHorizontal="true"/>
      <LinearLayout
          android:layout_below="@id/mango"
          android:id="@+id/animal_4"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="7dp"
          android:orientation="vertical"
          android:background="@drawable/darkgreen_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="आंबा"
            android:layout_gravity="center"
            android:textSize="35sp"
            android:textStyle="bold"
            android:textColor="#ffffff"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:text="आंबा हे विषुवृत्तीय प्रदेशात आढळणारं झाड आणि फळ आहे. अवीट गोडीच्या या फळाला ‘कोकणचा राजा’ असं म्हणतात. एप्रिल ते जून हा या फळाचा मोसम आहे."
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textSize="17sp"/>

        <LinearLayout
            android:id="@+id/btn_readMore_mango"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal">
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Read more"
              android:textColor="#ffffff"
              android:textStyle="bold"/>

          <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@drawable/ic_next"
              android:layout_marginRight="30dp"/>


        </LinearLayout>
      </LinearLayout>

      <ImageView
          android:id="@+id/orange"
          android:layout_below="@id/animal_4"
          android:layout_width="250dp"
          android:layout_height="150dp"
          android:layout_marginTop="15dp"
          android:src="@drawable/orange"
          android:layout_centerHorizontal="true"/>
      <LinearLayout
          android:layout_below="@id/orange"
          android:id="@+id/animal_5"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="7dp"
          android:orientation="vertical"
          android:background="@drawable/orange_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="संत्री"
            android:layout_gravity="center"
            android:textSize="35sp"
            android:textStyle="bold"
            android:textColor="#ffffff"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:text="संत्र्याचा रंग प्रामुख्याने नारंगी असतो ज्यामुळे त्याला नारंगी या नावाने देखील ओळखले जाते. संत्र्याच्या झाडाची गडद हिरवी पाने....."
            android:gravity="center"
            android:textSize="17sp"/>

        <LinearLayout
            android:id="@+id/btn_readMore_orange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal">
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Read more"
              android:textColor="#ffffff"
              android:textStyle="bold"/>

          <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@drawable/ic_next"
              android:layout_marginRight="30dp"/>


        </LinearLayout>
      </LinearLayout>

      <ImageView
          android:id="@+id/pinaple"
          android:layout_below="@id/animal_5"
          android:layout_width="250dp"
          android:layout_height="150dp"
          android:layout_marginTop="15dp"
          android:src="@drawable/pinaple"
          android:layout_centerHorizontal="true"/>
      <LinearLayout
          android:layout_below="@id/pinaple"
          android:id="@+id/animal_6"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="7dp"
          android:orientation="vertical"
          android:background="@drawable/white_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="अननस"
            android:layout_gravity="center"
            android:textSize="35sp"
            android:textStyle="bold"
            android:textColor="#ffffff"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:text="अननसाची पक्क फळे चकत्या करून खातात त्याच्या फळापासून मुरंबा, रस व शिर्का तयार करतात. त्याच्या ताज्या रसात ब्रोमेलिन नावाचा पाचक पदार्थ असतो. तसेच क जीवनसत्त्वही असते."
            android:gravity="center"
            android:textSize="17sp"/>

        <LinearLayout
            android:id="@+id/btn_readMore_pinaple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal">
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Read more"
              android:textColor="#ffffff"
              android:textStyle="bold"/>

          <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@drawable/ic_next"
              android:layout_marginRight="30dp"/>


        </LinearLayout>
      </LinearLayout>

      <ImageView
          android:id="@+id/strawberry"
          android:layout_below="@id/animal_6"
          android:layout_width="250dp"
          android:layout_height="150dp"
          android:layout_marginTop="15dp"
          android:src="@drawable/strawberry"
          android:layout_centerHorizontal="true"/>
      <LinearLayout
          android:layout_below="@id/strawberry"
          android:id="@+id/animal_7"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="7dp"
          android:orientation="vertical"
          android:background="@drawable/darkgreen_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="स्ट्रॉबेरी"
            android:layout_gravity="center"
            android:textSize="35sp"
            android:textStyle="bold"
            android:textColor="#ffffff"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:text="स्ट्रॉबेरी हे मूळ उत्तर अमेरिकेचे फळ आहे. त्यानंतर त्याचा प्रसार युरोप मध्ये झाला. स्ट्रॉबेरी फळाभोवती खास श्रीमंतीचे वलय आहे"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textSize="17sp"/>

        <LinearLayout
            android:id="@+id/btn_readMore_strawberry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal">
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Read more"
              android:textColor="#ffffff"
              android:textStyle="bold"/>

          <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@drawable/ic_next"
              android:layout_marginRight="30dp"/>


        </LinearLayout>
      </LinearLayout>


      <TextView
          android:id="@+id/po"
          android:layout_marginTop="10dp"
          android:layout_below="@id/animal_7"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerHorizontal="true"
          android:text="Powered by"/>
      <ImageView
          android:layout_below="@id/po"
          android:layout_width="200dp"
          android:layout_height="100dp"
          android:layout_centerHorizontal="true"
          android:src="@drawable/vclassroom"/>

    </RelativeLayout>
  </ScrollView>

  </RelativeLayout>