<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="बाल मित्र"
                android:fontFamily="sans-serif-black"
                android:textStyle="bold"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="18dp"
                android:textSize="35sp"
                android:textColor="@color/textColor"
                android:layout_marginTop="20dp"/>

            <RelativeLayout
                android:gravity="center"
                android:id="@+id/main_b1"
                android:layout_below="@id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/b1"
                    android:orientation="vertical"
                    android:layout_marginTop="15dp"
                    android:layout_width="150dp"
                    android:weightSum="1"
                    android:background="@drawable/item_bg"
                    android:layout_height="200dp">

                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="मुळाक्षरे"
                        android:layout_gravity="center_horizontal"
                        android:textColor="#ffffff"
                        android:textSize="25sp"
                        android:textStyle="bold"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/school_bag"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/b2"
                    android:orientation="vertical"
                    android:layout_toEndOf="@id/b1"
                    android:layout_marginTop="65dp"
                    android:layout_marginLeft="15dp"
                    android:weightSum="1"
                    android:layout_width="150dp"
                    android:background="@drawable/item_bg"
                    android:layout_height="200dp"
                    android:layout_toRightOf="@id/b1">

                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="गणित"
                        android:layout_gravity="center_horizontal"
                        android:textColor="#ffffff"
                        android:textSize="25sp"
                        android:textStyle="bold"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/maths"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/b3"
                    android:layout_below="@id/b1"
                    android:orientation="vertical"
                    android:weightSum="1"
                    android:layout_marginTop="15dp"
                    android:layout_width="150dp"
                    android:background="@drawable/item_bg"
                    android:layout_height="200dp">

                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="प्राणी"
                        android:layout_gravity="center_horizontal"
                        android:textColor="#ffffff"
                        android:textSize="25sp"
                        android:textStyle="bold"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/animal"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/b4"
                    android:layout_below="@id/b2"
                    android:orientation="vertical"
                    android:layout_toEndOf="@id/b3"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:weightSum="1"
                    android:layout_width="150dp"
                    android:background="@drawable/item_bg"
                    android:layout_height="200dp"
                    android:layout_toRightOf="@id/b1">

                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="पक्षी"
                        android:layout_gravity="center_horizontal"
                        android:textColor="#ffffff"
                        android:textSize="25sp"
                        android:textStyle="bold"/>
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:src="@drawable/birds"
                        android:layout_marginTop="20dp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/b5"
                    android:layout_below="@id/b3"
                    android:orientation="vertical"
                    android:layout_marginTop="15dp"
                    android:weightSum="1"
                    android:layout_width="150dp"
                    android:background="@drawable/item_bg"
                    android:layout_height="200dp">

                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="फळे"
                        android:layout_gravity="center_horizontal"
                        android:textColor="#ffffff"
                        android:textSize="25sp"
                        android:textStyle="bold"/>
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:src="@drawable/fruits"
                        android:layout_marginTop="20dp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/b6"
                    android:layout_below="@id/b4"
                    android:orientation="vertical"
                    android:layout_toEndOf="@id/b3"
                    android:weightSum="1"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_width="150dp"
                    android:background="@drawable/item_bg"
                    android:layout_height="200dp"
                    android:layout_toRightOf="@id/b1">

                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="फुले"
                        android:layout_gravity="center_horizontal"
                        android:textColor="#ffffff"
                        android:textSize="25sp"
                        android:textStyle="bold"/>
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/flower"/>

                </LinearLayout>


            </RelativeLayout>

            <TextView
                android:layout_below="@id/main_b1"
                android:gravity="center"
                android:id="@+id/po"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Powered by"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:src="@drawable/vclassroom"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/po"/>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>